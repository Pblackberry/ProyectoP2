<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoP2.Views.MembresiaAdministrador"
             Title="MembresiaAdministrador">
    <ScrollView>
        <AbsoluteLayout>
            <CollectionView x:Name="CollectionMembresias"
                            ItemsSource="{Binding CollectionMembresias}"
                            Margin="20">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <HorizontalStackLayout>
                                <Label Text="Id membresÃ­a: "/>
                                <Label Text="{Binding Id_Membresias}"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout>
                                <Label Text="Nombre: "/>
                                <Label Text="{Binding Nombre}"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout>
                                <Label Text="Cedula: "/>
                                <Label Text="{Binding Cedula}"/>
                            </HorizontalStackLayout>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
            <Button x:Name="BotonRegistrar"
                    Text="Registrar nuevo usuario"
                    Clicked="BotonRegistrar_Clicked"
                    AbsoluteLayout.LayoutFlags="PositionProportional"
                    AbsoluteLayout.LayoutBounds="0.95, 0.95, 200, 50"
                    WidthRequest="200"
                    Padding="2"/>
        </AbsoluteLayout>
        
        
    </ScrollView>
    


</ContentPage>