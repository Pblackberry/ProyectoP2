<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProyectoP2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProyectoP2"
    Shell.FlyoutBehavior="Disabled"
    Title="ProyectoP2">

    <TabBar>
        <Tab Icon="home.png" Title="Home">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage"/>
        </Tab>
        <Tab Icon="about.png" Title="Info">
            <ShellContent
                Title="About"
                ContentTemplate="{DataTemplate local:Views.AboutPage}"
                Route="AboutPage"/>
        </Tab>
        <Tab Icon="person.png" Title="Membresia">
            <ShellContent 
                Title="Membresias"
                ContentTemplate="{DataTemplate local:Views.InicioSesion}"
                Route="InicioSesion"/>
        </Tab>
        
    </TabBar>

</Shell>
